<% index_class = "journey-stop-#{index}" %>

<div class="col-12">
  <div class="card">
    <%= render partial: 'shared/journey_journey_stop_card/images_grid', locals: { journey_or_journey_stop: journey_stop }%>
    <div class="card-header">
      <h5 class="card-title title <%= index_class %>" id="journey-stop-image-processing-status">
        <%= journey_stop.title %>
      </h5>
      <h6 class="card-subtitle text-muted">
        Created <%= time_ago_in_words(journey_stop.created_at) %> ago.
      </h6>
    </div>
    <div class="card-body">
      <%= render partial: 'shared/journey_journey_stop_card/creator', locals: { user: journey_stop.journey.user }%>
      <%= render partial: 'journey_stops/view_stop_button',           locals: { journey_stop: journey_stop }%>
      <%= render partial: 'shared/journey_journey_stop_card/views',   locals: { journey_or_journey_stop: journey_stop }%>
    </div>
  </div>
</div>