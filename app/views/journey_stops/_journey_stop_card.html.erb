<% index_class = "journey-stop-#{index}" %>

<div class="card">
  <div class="card-header">
    <div class="mb-3">
      <h1 class="<%= index_class %> d-inline-block" id="journey-stop-image-processing-status">
        <%= journey_stop.title %>
      </h1>

      <%= render partial: 'shared/journey_journey_stop/map', locals: { journey_or_journey_stop: journey_stop } %>

      <h6 class="card-subtitle text-muted">
        created <%= time_ago_in_words(journey_stop.created_at) %> ago
      </h6>
    </div>
  </div>

  <div class="card-body mb-3">
    <h4>
      <%= render partial: 'shared/journey_journey_stop/description', locals: { journey_or_journey_stop: journey_stop } %>
    </h4>

    <%= render partial: 'shared/journey_journey_stop_card/images_grid', locals: { journey_or_journey_stop: journey_stop } %>
  </div>

  <div class="card-header">
    <%= render partial: 'shared/journey_journey_stop/destroy', locals: { journey_or_journey_stop: journey_stop, path: journey_journey_stop_path(journey_stop.journey, journey_stop) } %>
    <%= render partial: 'map_pins/pin_unpin', locals: { current_user: current_user, journey_stop: journey_stop } %>
  </div>
</div>
