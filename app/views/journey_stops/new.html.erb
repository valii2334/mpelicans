<div class="mb-3">
  <h1 class="h3 d-inline align-middle">Make a Stop</h1>
  <%= link_to 'View Journey', journey_path(@journey_stop.journey), class: 'btn btn-primary float-end mt-n1' %>
</div>

<div class="row">
	<div class="col-12">
		<div class="card">
			<div class="card-body">
        <%= form_for [@journey_stop.journey, @journey_stop] do |f| %>
          <%= f.hidden_field :journey_id, value: params[:journey_id] %>
					<div class="mb-3" style="color: red;">
						<% @journey_stop.errors.full_messages.each do |message| %>
							<li><%= message %></li>
						<% end %>
					</div>

          <div class="mb-3">
            <%= f.label :title, class: 'form-label' %>
            <%= f.text_field :title, required: true, class: 'form-control' %>
          </div>

          <div class="mb-3">
            <%= f.label :description, class: 'form-label' %>
            <%= f.text_field :description, required: true, class: 'form-control' %>
          </div>

          <div class="mb-3">
						<label class="form-label">
							Current locations plus code.
							<br>
							<em>
								<a href="https://support.google.com/maps/answer/7047426?hl=en&co=GENIE.Platform%3DAndroid" target="_blank">How to obtain a plus code</a>
							</em>
						</label>
            <%= f.text_field :plus_code, required: true, class: 'form-control' %>
          </div>

          <div class="mb-3">
						<label class="form-label">
							Add pictures from the stop you made
						</label>
						<br>
            <%= f.file_field :images, multiple: true, direct_upload: true, required: true %>
          </div>

          <div class="actions">
            <%= f.submit "Create", class: 'btn btn-primary' %>
          </div>
        <% end %>
			</div>
		</div>
	</div>
</div>
