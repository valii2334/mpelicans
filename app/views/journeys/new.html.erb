<h1 class="h3 mb-3">Start a Journey</h1>

<div class="row">
	<div class="col-12">
		<div class="card">
			<div class="card-body">
        <%= form_for @journey do |f| %>
					<div class="mb-3" style="color: red;">
						<% @journey.errors.full_messages.each do |message| %>
							<li><%= message %></li>
						<% end %>
					</div>

          <div class="mb-3">
            <%= f.label :title, class: 'form-label' %>
            <%= f.text_field :title, required: true, class: 'form-control' %>
          </div>

          <div class="mb-3">
            <%= f.label :description, class: 'form-label' %>
            <%= f.text_field :description, required: true, class: 'form-control' %>
          </div>

          <div class="mb-3">
						<label>
							What is your journeys start plus code? <a href="https://maps.google.com/pluscodes/" target="_blank">What is a plus code?</a>
						</label>
            <%= f.text_field :start_plus_code, required: true, class: 'form-control' %>
          </div>

          <div class="mb-3">
            <label>
              Access Type
            </label>

            <div class="form-check">
              <label>
                <%= f.radio_button :access_type, 'private_journey', checked: true, class: 'form-check-input' %>
                Private - only you can view your journey
              </label>
            </div>

            <div class="form-check">
              <label>
                <%= f.radio_button :access_type, 'protected_journey', class: 'form-check-input' %>
                Protected - we will generate a link to share your journey
              </label>
            </div>
          </div>

          <div class="mb-3">
						<label>
							Add the first picture of your journey
						</label>
						<br>
            <%= f.file_field :image, required: true %>
          </div>

          <div class="actions">
            <%= f.submit "Create", class: 'btn btn-primary' %>
          </div>
        <% end %>
			</div>
		</div>
	</div>
</div>
