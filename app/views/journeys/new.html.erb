<h1 class="h3 mb-3">Start a Journey</h1>

<div class="row">
	<div class="col-12">
		<div class="card">
			<div class="card-body">
        <%= form_for @journey do |f| %>
					<div class="mb-3" style="color: red;">
						<% @journey.errors.full_messages.each do |message| %>
							<li><%= message %></li>
						<% end %>
					</div>

          <div class="mb-3">
            <%= f.label :title, class: 'form-label' %>
            <%= f.text_field :title, required: true, class: 'form-control' %>
          </div>

          <div class="mb-3">
            <%= f.label :description, class: 'form-label' %>
            <%= f.text_field :description, required: true, class: 'form-control' %>
          </div>

          <div class="mb-3">
						<label class="form-label">
							What is your journeys start plus code?
							<br>
							<em>
								<a href="https://support.google.com/maps/answer/7047426?hl=en&co=GENIE.Platform%3DAndroid" target="_blank">How to obtain a plus code</a>
							</em>
						</label>
            <%= f.text_field :start_plus_code, required: true, class: 'form-control' %>
          </div>

          <div class="mb-3">
            <label class="form-label">
              Access Type. This can be changed later.
            </label>

            <div class="form-check">
              <label>
                <%= f.radio_button :access_type, 'private_journey', checked: true, class: 'form-check-input' %>
                Private
								<br>
								<em>only you can view this journey</em>
              </label>
            </div>

            <div class="form-check">
              <label>
                <%= f.radio_button :access_type, 'protected_journey', class: 'form-check-input' %>
                Protected
								<br>
								<em>we will generate a private link to share this journey</em>
              </label>
            </div>

						<div class="form-check">
							<label>
								<%= f.radio_button :access_type, 'public_journey', class: 'form-check-input' %>
								Public
								<br>
								<em>anyone can see this journey</em>
							</label>
						</div>

						<div class="form-check">
							<label>
								<%= f.radio_button :access_type, 'monetized_journey', class: 'form-check-input' %>
								Monetized
								<br>
								<em>people will be required to pay <b>$2.00</b> in order to see this journey</em>
							</label>
						</div>
          </div>

          <div class="mb-3">
						<label class="form-label">
							Add the first picture of your journey
						</label>
						<br>
            <%= f.file_field :image, required: true %>
          </div>

					<div class="actions">
            <%= f.submit "Create", class: 'btn btn-primary' %>
          </div>
        <% end %>
			</div>
		</div>
	</div>
</div>
