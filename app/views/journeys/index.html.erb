<% if current_user %>
  <div class="row">
    <div class="col-lg-6 offset-lg-3 col-md-8 offset-md-2 col-12">
      <%= link_to "+ New Journey", new_journey_path, class: 'btn btn-primary float-end mt-n1' %>
    </div>
  </div>

  <br>

  <div class="row">
    <div class="col-lg-6 offset-lg-3 col-md-8 offset-md-2 col-12">
      <%= link_to 'Mine', 
                  journeys_path(which_journeys: 'mine'),
                  class: "btn #{which_journeys_button_class(which_journeys: 'mine')}"
      %>
      <%= link_to 'Bought',
                  journeys_path(which_journeys: 'bought'),
                  class: "btn #{which_journeys_button_class(which_journeys: 'bought')}"
      %>
      <%= link_to 'Latest', 
                  journeys_path,
                  class: "btn #{which_journeys_button_class(which_journeys: 'latest')}"
      %>
    </div>
  </div>
<% end %>

<br>

<% unless current_user %>
  <div class="row">
    <div class="col-lg-6 offset-lg-3 col-md-8 offset-md-2 col-12">
      <div style="padding:56.25% 0 0 0;position:relative;">
        <iframe 
          src="https://player.vimeo.com/video/852083857?badge=0&amp;autopause=0&amp;player_id=0&amp;app_id=58479" 
          frameborder="0" 
          allow="autoplay; fullscreen; picture-in-picture" 
          style="position:absolute;top:0;left:0;width:100%;height:100%;" 
          title="MPelicans">
        </iframe>
      </div>
      <script src="https://player.vimeo.com/api/player.js"></script>
    </div>
  </div>

  <br>
<% end %>

<%= render partial: 'journeys', locals: { journeys: @journeys } %>

<div class="row">
  <div class="col-lg-6 offset-lg-3 col-md-8 offset-md-2 col-12">
    <div class="mb-3">
      <%= paginate @journeys, theme: 'bootstrap-5' %>
    </div>
  </div>
</div>