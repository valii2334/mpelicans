<meta name="description" content="View latest journeys.">

<% if current_user %>
  <div class="row">
    <div class="col-lg-6 offset-lg-3 col-md-8 offset-md-2 col-12">
      <%= link_to "+ New Journey", new_journey_path, class: 'btn btn-primary float-end mt-n1' %>
    </div>
  </div>

  <br>

  <div class="row">
    <div class="col-lg-6 offset-lg-3 col-md-8 offset-md-2 col-12">
      <% Journey::AVAILABLE_FILTER_BUTTONS.each do |filter_button| %>
        <%= link_to filter_button.camelize, 
                    journeys_path(which_journeys: filter_button),
                    class: "btn #{which_journeys_button_class(which_journeys: filter_button)}"
        %>
      <% end %>
    </div>
  </div>
<% end %>

<br>

<%= render partial: 'journeys', locals: { journeys: @journeys } %>

<div class="row">
  <div class="col-lg-6 offset-lg-3 col-md-8 offset-md-2 col-12">
    <div class="mb-3">
      <%= paginate @journeys, theme: 'bootstrap-5' %>
    </div>
  </div>
</div>