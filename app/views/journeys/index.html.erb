<meta name="description" content="View latest journeys.">

<div class="row">
  <div class="col-lg-6 offset-lg-1 col-md-8 col-12">
    <% if current_user %>
      <div class="row">
        <div class="col-12">
          <% Journey::AVAILABLE_FILTER_BUTTONS.each do |filter_button| %>
            <%= link_to filter_button.camelize, 
                        journeys_path(which_journeys: filter_button),
                        class: "btn #{which_journeys_button_class(which_journeys: filter_button)}"
            %>
          <% end %>

          <%= link_to "+ New Journey", new_journey_path, class: 'btn btn-primary float-end mt-n1' %>
        </div>
      </div>

      <div class="row">
        <div class="col-12">
          <br>
        </div>
      </div>
    <% end %>

    <div class="row">
      <div class="col-12">
        <h3>
          Welcome!
        </h3>
      </div>
    </div>

    <div class="row">
      <div class="col-12">
        <%= render partial: 'journeys', locals: { journeys: @journeys } %>
      </div>
    </div>

    <div class="row">
      <div class="col-12">
        <div class="mb-3">
          <%= paginate @journeys, theme: 'bootstrap-5' %>
        </div>
      </div>
    </div>
  </div>

  <div class="col-lg-4 offset-lg-1 col-md-4 col-0">
    <% User.all.sample(20).each do |user| %>
      <%= render partial: 'pelicans/pelican', locals: { user: user } %>
    <% end %>
  </div>
</div>