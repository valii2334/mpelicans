<h1 class="h3 mb-3">
  <%= @journey.title %>
</h1>

<div class="row">
	<div class="col-12">
		<div class="card">
			<div class="card-body">
        <%= @journey.description %>

        <iframe
          width="100%"
          height="450"
          style="border:0"
          loading="lazy"
          allowfullscreen
          referrerpolicy="no-referrer-when-downgrade"
          src="https://www.google.com/maps/embed/v1/directions?key=<%= ENV['GOOGLE_MAPS_API_KEY'] %>
          &origin=<%= @journey.start_plus_code %>">
				</iframe>
      </div>
    </div>
  </div>
</div>
