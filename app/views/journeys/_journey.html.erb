<h1 class="h3 mb-3">
  <%= @journey.title %>
</h1>

<% if @journey.protected_journey? %>
  <div class="row">
  	<div class="col-12">
  		<div class="card">
        <div class="card-header">
          Private Link
        </div>
  			<div class="card-body">
          <%= watch_journeys_url(access_code: @journey.access_code) %>
        </div>
      </div>
    </div>
  </div>
<% end %>

<div class="row">
	<div class="col-12">
		<div class="card">
      <div class="card-header">
        Journey Map
      </div>
			<div class="card-body">
        <iframe
          width="100%"
          height="450"
          style="border:0"
          loading="lazy"
          allowfullscreen
          referrerpolicy="no-referrer-when-downgrade"
          src="<%= @journey.map_url %>">
				</iframe>
      </div>
    </div>
  </div>
</div>

<div class="row">
	<div class="col-12">
		<div class="card">
      <div class="card-header">
        First Picture
      </div>
			<div class="card-body">
        <div class="row">
          <div class="col-lg-3 col-md-1 col-sm-0"></div>
          <div class="col-lg-6 col-md-10 col-sm-12">
            <button class="image-button" type="button" data-bs-toggle="modal" data-bs-target="#firstPictureModal">
              <%= image_tag @journey.image, class: 'd-block w-100' %>
            </button>

            <div class="modal fade" id="firstPictureModal" tabindex="-1" aria-labelledby="firstPictureModalLabel" aria-hidden="true">
              <div class="modal-dialog" style="max-width: 100%;">
                <div class="modal-content">
                  <div class="modal-body">
                    <%= image_tag @journey.image, style: "width: 100%; height: auto;" %>
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="col-lg-3 col-md-1 col-sm-0"></div>
        </div>
      </div>
    </div>
  </div>
</div>
