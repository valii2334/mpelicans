<h1 class="h3 mb-3">
  <%= @journey.title %>
</h1>

<div class="row">
  <div class="col-12">
    <div class="card">
      <div class="card-body">
        <div class="card-title">
          Journey Description
        </div>
        <div class="card-text">
          <%= @journey.description %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row">
	<div class="col-12">
		<div class="card">
			<div class="card-body">
        <div class="card-title">
          Journey Map
        </div>
        <iframe
          width="100%"
          height="450"
          style="border:0"
          loading="lazy"
          allowfullscreen
          referrerpolicy="no-referrer-when-downgrade"
          src="<%= @journey.map_url %>">
				</iframe>
      </div>
    </div>
  </div>
</div>

<div class="row">
	<div class="col-12">
		<div class="card">
			<div class="card-body">
        <div class="card-title">
          First Picture
        </div>
        <div class="row">
          <div class="col-lg-3 col-md-1 col-sm-0"></div>
          <div class="col-lg-6 col-md-10 col-sm-12">
            <button class="image-button" type="button" data-bs-toggle="modal" data-bs-target="#firstPictureModal">
              <%= image_tag @journey.image.variant(:max).processed.url, class: 'd-block w-100' %>
            </button>

            <div class="modal fade" id="firstPictureModal" tabindex="-1" aria-labelledby="firstPictureModalLabel" aria-hidden="true">
              <div class="modal-dialog modal-fullscreen">
                <div class="modal-content align-items-center align-middle">
                  <div class="modal-body">
                    <%= image_tag @journey.image.variant(:max).processed.url, class: 'img-fluid' %>
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="col-lg-3 col-md-1 col-sm-0"></div>
        </div>
      </div>
    </div>
  </div>
</div>

<% @journey.journey_stops.each do |journey_stop| %>
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-body">
          <div class="card-title">
            <%= journey_stop.title %> - <a href="<%= journey_stop.location_link %>" target="_blank">View Stop Location</a>
          </div>
          <div class="card-subtitle">
            <%= journey_stop.description %>
          </div>
          <br>
          <div class="container">
            <div class="row row-cols-4">
              <% journey_stop.images.with_all_variant_records.each_with_index do |image, index| %>
                <div class="col">
                  <button class="image-button" type="button" data-bs-toggle="modal" data-bs-target="#JourneyStop<%= image.hash %>">
                    <%= image_tag image.variant(:thumb).processed.url, class: 'd-block w-100' %>
                  </button>

                  <div class="modal fade" id="JourneyStop<%= image.hash %>" tabindex="-1" aria-labelledby="JourneyStop<%= image.hash %>Label" aria-hidden="true">
                    <div class="modal-dialog modal-fullscreen">
                      <div class="modal-content align-items-center align-middle">
                        <div class="modal-body">
                          <%= image_tag image.variant(:max).processed.url, class: 'img-fluid' %>
                        </div>
                        <div class="modal-footer">
                          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

<% if @journey.protected_journey? %>
  <div class="row">
  	<div class="col-12">
  		<div class="card">
  			<div class="card-body">
          <div class="card-title">
            Private Link
          </div>
          <div class="card-text">
            <%= watch_journeys_url(access_code: @journey.access_code) %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

<% if current_user && can?(:edit, @journey) %>
  <%= link_to 'Make a Stop', new_journey_stop_path(journey_id: @journey.id), class: 'btn btn-primary' %>
<% end %>
