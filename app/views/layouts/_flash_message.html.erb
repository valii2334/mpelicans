<% if flash[:message] %>
  <div class="alert alert-<%= flash[:message_type] || 'secondary' %> alert-dismissible" role="alert">
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    <div class="alert-message">
      <%= flash[:message] %>
    </div>
  </div>
<% end %>