<div class="container d-flex flex-column">
	<div class="row vh-95">
		<div class="col-sm-10 col-md-8 col-lg-6 mx-auto d-table h-100">
			<div class="d-table-cell align-middle">

				<div class="text-center mt-4">
					<h1 class="h2">Forgot your password?</h1>
					<p class="lead"> We can reset it </p>
				</div>

				<div class="card">
					<div class="card-body">
						<div class="m-sm-4">
							<div class="text-center">
								<%= image_tag "avatars/avatar.png", class: "img-fluid rounded-circle", width: "132", height: "132", alt: "Migrating Pelican" %>
							</div>
              <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
                <%= f.hidden_field :reset_password_token %>

                <div class="mb-3">
                  <%= render "devise/shared/error_messages", resource: resource %>
                </div>

                <div class="mb-3">
                  <%= f.label :password, 'New password', class: 'form-label' %><br />
                  <% if @minimum_password_length %>
                    <em>(<%= @minimum_password_length %> characters minimum)</em><br />
                  <% end %>
                  <%= f.password_field :password, required: true, autofocus: true, autocomplete: "new-password", class: 'form-control form-control-lg' %>
                </div>

                <div class="mb-3">
                  <%= f.label :password_confirmation, 'Confirm new password', class: 'form-label' %><br />
                  <%= f.password_field :password_confirmation, required: true, autofocus: true, autocomplete: "new-password", class: 'form-control form-control-lg' %>
                </div>

                <div class="text-center mt-3">
                  <%= f.submit "Change my password", class: "btn btn-lg btn-primary" %>
                </div>

                <div class="text-center mt-3">
                  <%= render "devise/shared/links" %>
                </div>
              <% end %>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
