<div class="container d-flex flex-column">
	<div class="row vh-95">
		<div class="col-sm-10 col-md-8 col-lg-6 mx-auto d-table h-100">
			<div class="d-table-cell align-middle">
				<div class="text-center mt-4">
					<h1 class="h2">Welcome to Migrating Pelicans</h1>
					<p class="lead"> Sign up to share your journeys! </p>
				</div>
				<div class="card">
					<div class="card-body">
						<div class="m-sm-4">
							<div class="text-center">
								<%= image_tag "avatars/avatar.png", class: "img-fluid rounded-circle", width: "132", height: "132", alt: "Migrating Pelican" %>
							</div>
              <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <div class="mb-3">
                  <%= render "devise/shared/error_messages", resource: resource %>
                </div>

                <div class="mb-3">
                  <%= f.label :login, "Email / Username", class: 'form-label' %><br />
                  <%= f.text_field :login, required: true, autofocus: true, autocomplete: "email / username", class: 'form-control form-control-lg' %>
                </div>

                <div class="mb-3">
                  <%= f.label :password, class: 'form-label' %><br />
                  <%= f.password_field :password, required: true, autocomplete: "current-password", class: 'form-control form-control-lg' %>
                </div>

                <% if devise_mapping.rememberable? %>
                  <div class="mb-3">
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me, class: 'form-label' %>
                  </div>
                <% end %>

                <div class="text-center mt-3">
                  <%= f.submit "Log in", class: "btn btn-lg btn-primary" %>
                </div>

                <div class="text-center mt-3">
                  <%= render "devise/shared/links" %>
                </div>
              <% end %>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
