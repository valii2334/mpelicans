<div class="mb-3">
  <h1 class="h3 d-inline align-middle">Pelicans</h1>
</div>

<div class="row">
  <div class="col-12">
    <div class="card">
    	<div class="card-body">
    		<div class="row">
    			<div class="w-100"></div>
    			<div class="col-md">
    				<div class="mb-0">
              <%= form_for :pelicans, html: { method: :get } do |f| %>
                <div class="input-group">
                  <%= f.text_field :query_string, required: true, class: 'form-control', placeholder: 'Search...' %>
                  <%= f.submit 'Search', class: 'btn btn-primary' %>
                </div>
              <% end %>
    				</div>
    			</div>
    		</div>
    	</div>
    </div>
  </div>
</div>

<div class="row">
	<% if @users.empty? %>
    <div class="mb-3">
      <h1 class="h4 d-inline align-middle">No pelicans found ...</h1>
    </div>
	<% else %>
		<% @users.each do |user| %>
      <div class="col-md-4 col-xl-3">
        <%= render partial: 'pelicans/pelican', locals: { user: user } %>
      </div>
		<% end %>
	<% end %>
</div>
