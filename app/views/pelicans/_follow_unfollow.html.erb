<% if follower %>
  <% if can?(:create, Relationship.new, follower, followee) %>
    <%= link_to 'Follow', relationships_path(followee_id: followee.id), method: :post, class: 'btn btn-sm btn-primary pelican-path' %>
  <% end %>

  <% relationship =  Relationship.find_by(follower_id: follower.id, followee_id: followee.id) %>
  <% if can?(:destroy, relationship, follower, followee) %>
    <%= link_to 'Unfollow', relationship_path(id: relationship.id), method: :delete, class: 'btn btn-sm btn-danger pelican-path' %>
  <% end %>
<% end %>
